pipeline {
    agent any
    stages {
        stage('Hello') {
            steps {
                sh 'false'
            }
            post {
                success {
                    echo 'this is the stage post success message'
                }
            }
        }
    }
    post {
        success {
            echo 'this is the overall post success message'
        }
        failure {
            echo 'this is the overall post failure message'
        }
        cleanup {
            echo 'this is the overall post cleanup message'
        }
    }
}

